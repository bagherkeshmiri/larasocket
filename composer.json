{
  "name": "bagherkeshmiri/larasocket",
  "description": "Simple, secure, native WebSocket server for Laravel (no external packages).",
  "type": "library",
  "keywords": [
    "laravel",
    "websocket",
    "realtime",
    "broadcast",
    "server",
    "socket",
    "native",
    "php"
  ],
  "license": "MIT",
  "homepage": "https://github.com/bagherkeshmiri/larasocket",
  "support": {
    "issues": "https://github.com/bagherkeshmiri/larasocket/issues",
    "source": "https://github.com/bagherkeshmiri/larasocket"
  },
  "authors": [
    {
      "name": "Bagher Keshmiri",
      "email": "bagherkeshmiri@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4",
    "illuminate/support": ">=8.0",
    "illuminate/console": ">=8.0",
    "illuminate/config": ">=8.0",
    "laravel/sanctum": "^4.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0|^10.0",
    "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0"
  },
  "autoload": {
    "psr-4": {
      "Bagherkeshmiri\\LaraSocket\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bagherkeshmiri\\LaraSocket\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "laravel": {
      "providers": [
        "Bagherkeshmiri\\LaraSocket\\LaraSocketServiceProvider"
      ],
      "aliases": {}
    }
  }
}
